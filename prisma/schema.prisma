// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SportType {
  RUNNING
  TRAIL
  HYROX
  CROSSFIT
  OCR
  BTT
  CYCLING
  SURF
  TRIATHLON
  SWIMMING
  OTHER
}

enum UserRole {
  USER
  ADMIN
}

enum Language {
  pt
  en
  es
  fr
  de
  it
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String          @unique
  emailVerified  DateTime?
  image          String?
  password       String?
  role           UserRole        @default(USER)
  locale         String          @default("pt") // User's preferred language (pt, en)
  accounts       Account[]
  sessions       Session[]
  participations Participation[]
  comments       Comment[]
  posts          Post[]
  postLikes      PostLike[]
  postComments   PostComment[]
  results        Result[]
  photos         ProfilePhoto[]
  // Friendships where user sent the request
  // Friendships where user sent the request
  sentFriendships     Friendship[] @relation("FriendshipSender")
  // Friendships where user received the request
  receivedFriendships Friendship[] @relation("FriendshipReceiver")
  instagramDrafts     InstagramPostDraft[]
  favoriteSports      SportType[]
  mapPreferences      MapPreferences?
  eventsPreferences   EventsPreferences?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([email])
  @@index([name])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

model Event {
  id          String         @id @default(cuid())
  title       String         // Título principal (pt) - fallback
  slug        String         @unique
  description String         @db.Text // Descrição principal (pt) - fallback
  
  sportTypes  SportType[]
  startDate   DateTime
  endDate     DateTime?
  city        String
  country     String         @default("Portugal")
  imageUrl    String?
  externalUrl String?
  isFeatured  Boolean        @default(false)
  
  // Geolocation
  latitude     Float?
  longitude    Float?
  googleMapsUrl String?
  stravaRouteEmbed String? @db.Text // Strava route embed code
  
  // Registration
  registrationDeadline DateTime?
  
  // Relations
  translations   EventTranslation[]
  variants       EventVariant[]
  pricingPhases  PricingPhase[]
  participations Participation[]
  comments       Comment[]
  posts          Post[]
  results        Result[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([sportTypes])
  @@index([startDate])
  @@index([city])
  @@index([isFeatured])
  @@index([slug])
}

// Tabela de traduções para eventos - SEO-friendly
model EventTranslation {
  id          String   @id @default(cuid())
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  language    Language
  
  title       String   // Título traduzido
  description String   @db.Text // Descrição traduzida
  city        String?  // Nome da cidade traduzido (ex: Lisboa -> Lisbon)
  
  // SEO fields
  metaTitle       String? // Meta title específico para SEO
  metaDescription String? // Meta description para SEO
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([eventId, language]) // Um evento só pode ter uma tradução por idioma
  @@index([eventId])
  @@index([language])
  @@index([title]) // Index para pesquisa por título
}

model EventVariant {
  id              String         @id @default(cuid())
  eventId         String
  event           Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  name            String         // Nome principal (pt) - fallback
  description     String?        // Descrição principal (pt) - fallback
  
  distanceKm      Int?
  price           Float?         // Preço fixo (se não tiver fases)
  maxParticipants Int?
  startDate       DateTime?      // Data específica desta variante (se diferente do evento)
  startTime       String?        // Hora de início (ex: "09:00")
  
  // Technical data (especially for trail/endurance events)
  elevationGainM  Int?           // Desnível positivo em metros (D+)
  elevationLossM  Int?           // Desnível negativo em metros (D-)
  cutoffTimeHours Float?         // Tempo limite em horas
  itraPoints      Int?           // Pontos ITRA
  atrpGrade       Int?           // Grau ATRP (1-5)
  mountainLevel   Int?           // Mountain Level (1-3)
  
  // Relations
  translations   EventVariantTranslation[]
  pricingPhases  PricingPhase[]
  participations Participation[]
  results        Result[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([eventId])
  @@index([startDate])
}

// Tabela de traduções para variantes de eventos
model EventVariantTranslation {
  id          String       @id @default(cuid())
  variantId   String
  variant     EventVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  language    Language
  
  name        String       // Nome traduzido da variante
  description String?      // Descrição traduzida
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([variantId, language])
  @@index([variantId])
  @@index([language])
}

model PricingPhase {
  id             String        @id @default(cuid())
  eventId        String?       // Se for ao nível do evento (todas as variantes)
  event          Event?        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  variantId      String?       // Se for específico de uma variante
  variant        EventVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)
  
  name           String        // Ex: "1ª Fase", "Early Bird", "Fase Normal"
  startDate      DateTime
  endDate        DateTime
  price          Float
  discountPercent Int?         // Percentagem de desconto (opcional)
  note           String?       // Nota adicional (ex: "Desconto de 10% sobre o valor de 600€")
  
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([eventId])
  @@index([variantId])
  @@index([startDate])
}

model Participation {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String
  event     Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  variantId String?
  variant   EventVariant? @relation(fields: [variantId], references: [id], onDelete: SetNull)
  status    String        @default("going") // going, interested, not_going
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
}

model Result {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String
  event     Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  variantId String?
  variant   EventVariant? @relation(fields: [variantId], references: [id], onDelete: SetNull)
  time      String        // formato: "HH:MM:SS"
  position  Int?
  notes     String?       @db.Text
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([userId])
  @@index([eventId])
}

model Comment {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String
  event     Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
  content   String    @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([eventId])
  @@index([parentId])
}

model Post {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String?
  event     Event?        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  content   String        @db.Text
  imageUrl  String?
  isAutoPost Boolean      @default(false) // Auto-generated posts (participation announcements)
  likes     PostLike[]
  comments  PostComment[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([userId])
  @@index([eventId])
  @@index([createdAt])
}

model PostComment {
  id        String        @id @default(cuid())
  postId    String
  post      Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String        @db.Text
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([postId])
  @@index([userId])
  @@index([createdAt])
}

model PostLike {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

model ProfilePhoto {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageUrl  String
  caption   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Friendship {
  id         String           @id @default(cuid())
  senderId   String
  sender     User             @relation("FriendshipSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId String
  receiver   User             @relation("FriendshipReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  status     FriendshipStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@unique([senderId, receiverId])
  @@index([senderId])
  @@index([receiverId])
  @@index([status])
}

enum InstagramFormat {
  SQUARE   // 1:1 (1080x1080)
  PORTRAIT // 4:5 (1080x1350)
  STORY    // 9:16 (1080x1920)
}

model InstagramPostDraft {
  id            String          @id @default(cuid())
  userId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  templateKey   String          // T1, T2, T3, T4
  format        InstagramFormat @default(SQUARE)
  payload       Json            // All template fields, colors, overlay, backgroundUrl
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([userId])
  @@index([createdAt])
}

enum ContactType {
  SUGGESTION
  BUG
  QUESTION
  FEEDBACK
  OTHER
}

enum ContactStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model Contact {
  id        String        @id @default(cuid())
  name      String
  email     String
  type      String        @default("other")
  subject   String
  message   String        @db.Text
  status    String        @default("pending")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([email])
}

// Map filters preferences for authenticated users
model MapPreferences {
  id               String      @id @default(cuid())
  userId           String      @unique
  user             User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  sports           SportType[] // Filtered sports
  distanceRadius   Int?        // Distance radius in km (null = all)
  dateRange        String?     // "7d", "30d", "3m", "6m", "all"
  centerLat        Float?      // Last map center latitude
  centerLng        Float?      // Last map center longitude
  zoom             Int?        // Last zoom level
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@index([userId])
}

// Map filters preferences for anonymous users
model AnonymousMapPreferences {
  id               String      @id @default(cuid())
  anonymousId      String      @unique // UUID stored in localStorage
  sports           SportType[] // Filtered sports
  distanceRadius   Int?        // Distance radius in km (null = all)
  dateRange        String?     // "7d", "30d", "3m", "6m", "all"
  centerLat        Float?      // Last map center latitude
  centerLng        Float?      // Last map center longitude
  zoom             Int?        // Last zoom level
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  lastAccessedAt   DateTime    @default(now())

  @@index([anonymousId])
  @@index([lastAccessedAt]) // For cleanup of old anonymous preferences
}

// Events page filters preferences for authenticated users
model EventsPreferences {
  id               String      @id @default(cuid())
  userId           String      @unique
  user             User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  sports           SportType[] // Filtered sports
  distanceRadius   Int?        // Distance radius in km (null = all/global)
  dateRange        String?     // "7d", "30d", "3m", "6m", "all"
  searchQuery      String?     // Text search query
  userLat          Float?      // User's last known latitude
  userLng          Float?      // User's last known longitude
  locationEnabled  Boolean     @default(false) // Whether location filter is enabled
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@index([userId])
}

// Events page filters preferences for anonymous users
model AnonymousEventsPreferences {
  id               String      @id @default(cuid())
  anonymousId      String      @unique // UUID stored in localStorage
  sports           SportType[] // Filtered sports
  distanceRadius   Int?        // Distance radius in km (null = all/global)
  dateRange        String?     // "7d", "30d", "3m", "6m", "all"
  searchQuery      String?     // Text search query
  userLat          Float?      // User's last known latitude
  userLng          Float?      // User's last known longitude
  locationEnabled  Boolean     @default(false) // Whether location filter is enabled
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  lastAccessedAt   DateTime    @default(now())

  @@index([anonymousId])
  @@index([lastAccessedAt]) // For cleanup of old anonymous preferences
}
